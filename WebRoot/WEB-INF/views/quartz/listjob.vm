<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"> 
<head>
	<meta charset="UTF-8">
	#parse("common/common.vm")
	<title>任务列表</title>
	<link rel="stylesheet" type="text/css" href="resource/comm/easyui-1.5.4.1/themes/default/easyui.css">
	<link rel="stylesheet" type="text/css" href="resource/comm/easyui-1.5.4.1/themes/icon.css">
	<link rel="stylesheet" type="text/css" href="resource/comm/easyui-1.5.4.1/demo/demo.css">
	<script type="text/javascript" src="resource/comm/easyui-1.5.4.1//jquery.easyui.min.js"></script>
	 
	<script type="text/javascript" src="resource/js/quartz/listjob.js"></script>
</head>
<body style="background: beige;">
  <h2 style="text-align: center;">任务列表</h2>
  <div style="margin:20px 0;"></div>
	<table class="easyui-datagrid" title="Format DataGrid Columns" style="width:1860px;height:500px"
			data-options="rownumbers:true,singleSelect:true,iconCls:'icon-ok',url:'getAllCronJobInfos.do',method:'get'">
		<thead>
			<tr>
				<th data-options="field:'attr1',width:240,formatter:operationFormatter">操作</th>
				<th data-options="field:'jobGroup',width:100">任务组名称</th>
				<th data-options="field:'jobName',width:100">任务名称</th>
				<th data-options="field:'triggerGroupName',width:120">触发器组名称</th>
				<th data-options="field:'triggerName',width:120">触发器名称</th>
				<th data-options="field:'cronExpression',width:120">时间表达式</th>
				<th data-options="field:'prevFireTimeStr',width:140">上次运行时间</th>
				<th data-options="field:'nextFireTimeStr',width:140">下次运行时间</th>
				<th data-options="field:'triggerState',width:80">任务状态</th>
				<th data-options="field:'priority',width:80">优先级</th>
				<th data-options="field:'startTimeStr',width:140">开始时间</th>
				<th data-options="field:'endTimeStr',width:140">结束时间</th>
				<th data-options="field:'jobClass',width:250">任务类名</th>
				<th data-options="field:'jobDataMapJson',width:80">jobDataMap</th>
			</tr>
		</thead>
	</table>
</table>
<div style="width: 90%;margin: 0 auto;text-align: center;margin-top: 25px;">
	<button type="button" onclick="add();" class="btn">新增任务</button>
</div>
</body>
</html>
